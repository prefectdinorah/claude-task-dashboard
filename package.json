{
  "name": "claude-task-dashboard",
  "version": "1.0.0",
  "description": "Real-time Kanban dashboard for Claude Code tasks with WebSocket sync",
  "keywords": [
    "claude",
    "claude-code",
    "task-dashboard",
    "kanban",
    "websocket",
    "real-time"
  ],
  "author": "Anton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prefectdinorah/claude-task-dashboard"
  },
  "bin": {
    "claude-tasks": "./bin/cli.js",
    "claude-task-dashboard": "./bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "app",
    "components",
    "hooks",
    "lib",
    "public",
    "server",
    ".next",
    "next.config.js",
    "tailwind.config.ts",
    "postcss.config.js",
    "tsconfig.json"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run next\"",
    "next": "next dev -p 3050",
    "server": "tsx watch server/index.ts",
    "build": "next build && npm run build:server",
    "build:server": "tsc server/index.ts --outDir dist/server --esModuleInterop --module commonjs --target es2020 --skipLibCheck",
    "start": "concurrently \"node dist/server/index.js\" \"next start -p 3050\"",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "ws": "^8.16.0",
    "chokidar": "^3.6.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "framer-motion": "^11.0.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.0",
    "lucide-react": "^0.344.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
